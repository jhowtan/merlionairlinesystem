<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sg.mas.gatecontrol.GateCheckActivity"
    android:orientation="vertical">
    <TextView
        android:text="Passenger Gate Check"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/eticketNumber"
        android:layout_marginBottom="10dp"
        android:hint="@string/eticketNumber"
        android:editable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/passengerName"
        android:layout_marginBottom="10dp"
        android:hint="@string/passengerNameLabel"
        android:editable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/passengerSeatNumber"
        android:layout_marginBottom="10dp"
        android:hint="@string/passengerSeatNumber"
        android:editable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/gateCheckStatus"
        android:layout_marginBottom="10dp"
        android:hint="@string/gateCheckStatus"
        android:editable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="scanBoardingPass"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Boarding Pass"
        android:id="@+id/button" />


</LinearLayout>
